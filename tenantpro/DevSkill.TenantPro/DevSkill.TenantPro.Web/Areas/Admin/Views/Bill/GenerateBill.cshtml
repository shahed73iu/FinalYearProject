@model DevSkill.TenantPro.Web.Areas.Admin.Models.BillViewModel
@{
    ViewData["Title"] = "GenerateBill";
}

@section styles
{
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/admin/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
}

@section scripts
{
    <script type="text/javascript">window.addEventListener("load", window.print());</script>
}

<div class="wrapper">
    <!-- Main content -->
    <section class="invoice">
        <!-- title row -->
        <div class="row">
            <div class="col-sm-12">
                <h2 class="page-header">
                    <i class="fas fa-globe"></i> Razia Plaza
                    <small class="float-right">Printing Time : @DateTime.Now</small>
                </h2>
            </div>
            <!-- /.col -->
        </div>
        <!-- info row -->
        <div class="row invoice-info">
            <div class="col-sm-4 invoice-col">

                <address>
                    <strong></strong><br>
                    184, Senpara Parbata,<br>
                    Mirpur, Dhaka  - 1216<br>
                    razia.plaza@gmail.com<br>

                </address>
            </div>
            <!-- /.col -->
            <div class="col-sm-4 invoice-col">

            </div>
            <!-- /.col -->
            <div class="col-sm-4 invoice-col">
                <br>
                <br>
                <h3><b>Tenant Information</b></h3>
                <b><strong>Name : @Model.Tenant.Name  <br>
                    Holding : @Model.Tenant.Holding</strong></b><br><br />
                <h6 class="bold">Contact Person : </h6>
                <p>
                    @foreach (var item in Model.Tenant.ContactPersons)
                    {
                        <h6 class="font-weight-bold">@item.Name - @item.ContractNumber</h6>

                    }
                </p>
                <br>

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- Table row -->
        <div class="row">
            <div class="col-12 table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Bill Type</th>
                            <th>Item</th>
                            <th>Month - Year</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Electricity Bill</td>
                            <td>
                                <div class="list-group">
                                    Previous Reading : @Model.Reading.PreviousReading <br />
                                    Present Reading : @Model.Reading.PresentReading <br />
                                    Net Unit : @Model.Reading.NetUnit <br />
                                    Per Unit Price : @Model.Reading.PerUnitPrice <br />
                                </div>
                            </td>
                            <td> @Model.Billing.Month ,  @Model.Billing.Year</td>
                            <td>@Model.Reading.TotalBillofThisMonth</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- /.col -->
    </section>
    <!-- /.content -->
</div>

