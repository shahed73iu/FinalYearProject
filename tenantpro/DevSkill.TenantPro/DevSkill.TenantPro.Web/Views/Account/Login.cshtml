@model DevSkill.TenantPro.Web.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-box">
    <div class="login-logo">
        <a href="/"><b>Tenant</b>Pro</a>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Sign in to start your session</p>
            <form id="account" method="post">
                @if (ViewBag.Message == "Success")
                { 
                    <span class="text-green">@ViewBag.Message</span>
                }
                else
                {
                    <span class="text-danger text-center">@ViewBag.Message</span>
                }
                <div class="input-group mb-3">
                    <input type="email" class="form-control" asp-for="Email" placeholder="Username">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" id="remember">
                            <label for="remember">
                                Remember Me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
            <p class="mb-1">
                <a href="~/account/forgetPassword">I forgot my password</a>
            </p>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>


